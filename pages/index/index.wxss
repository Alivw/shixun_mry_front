/* 第一部分 */
page{
  height: 100%;
}
swiper{
  height: 26%;
}
swiper image{
  width: 100%;
  height: 100%;
}

/* 第二部分 */
.nav{
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  margin-top: 40rpx;
}

.navItem image{
  width: 100rpx;
  height: 100rpx;
}

.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 第三部分 */
.pros{
  margin-top: 40rpx;
}
.proItem{
  display: flex;
  padding: 0 20rpx;
  margin-top: 20rpx;
}
.proItem image{
  height: 160rpx;

}

.proexplain{
  width:300rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #999;
  font-size: 26rpx;
  margin-top: 20rpx;
}
.proInfo{
  margin-left: 20rpx;

  display: flex;
  justify-content: space-between;
}
.proname{
  font-size: 34rpx;
  font-weight: bold;
  width:200rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.proprice{
  font-size: 34rpx;
  font-weight: bold;
  color: #d24a58;
  margin-top: 30rpx;
}

.proBtn{
  background-color: #d24a58;
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  color: #fff;
  font-weight: bold;
  text-align: center;
  line-height: 100rpx;
  font-size: 34rpx;
}

/*  */
.result-item {
  display: flex;
  flex-direction: column;
  padding: 20rpx 0 20rpx 110rpx;
  overflow: hidden;
  border-bottom: 2rpx solid #e5e5e5;
}
.title {
  height: 110rpx;
}
.loading {
  position: relative;
  bottom: 5rpx;
  padding: 10rpx;
  text-align: center;
}